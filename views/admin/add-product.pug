extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action="/admin/add-product", method="POST")
            .form-control
                label(for="title") Title
                    input(type="text", name="title")#title
                label(for="imgUrl") Image
                    input(type="text", name="imgUrl")#imgUrl
                label(for="price") Price
                    input(type="number", name="price")#price
                label(for="discription") Discription
                    textarea(name="discription", cols="30", rows="10")#discription
                button.btn(type="submit") Add Products
