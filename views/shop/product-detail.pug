extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content 
    .product-item.centered
        header.card__header
            h1.product__title product.title
        .card__image
            img(src= product.imgUrl, alt="A Book")
        .card__content
            h2.product__price $#{product.price}
            p.product__description #{product.discription}
        .card__actions
            form(action="admin/edit-product", method="POST") 
                button.btn Delete
            include ../layouts/add-to-cart.pug 